{
  "name": "@lit/lit-starter-ts",
  "private": true,
  "version": "2.0.0",
  "description": "A simple web component",
  "main": "dist/smartknob-panel.js",
  "scripts": {
    "build": "yarn run lint && yarn run rollup && yarn run babel",
    "rollup": "rollup -c",
    "babel": "./node_modules/.bin/babel dist/smartknob-panel.js --out-file dist/smartknob-panel.js",
    "build:watch": "tsc --watch",
    "clean": "rimraf my-element.{d.ts,d.ts.map,js,js.map} test/my-element.{d.ts,d.ts.map,js,js.map} test/my-element_test.{d.ts,d.ts.map,js,js.map}",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "wds --watch",
    "serve:prod": "MODE=prod yarn run serve",
    "test": "yarn run test:dev && yarn run test:prod",
    "test:dev": "wtr",
    "test:watch": "wtr --watch",
    "test:prod": "MODE=prod wtr",
    "test:prod:watch": "MODE=prod wtr --watch",
    "checksize": "rollup -c ; cat my-element.bundled.js | gzip -9 | wc -c ; rm my-element.bundled.js"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.0",
    "@mdi/js": "^7.3.67",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^2.6.0",
    "ajv": "^6.12.6",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "home-assistant-js-websocket": "^9.1.0",
    "intl-messageformat": "^9.11.1",
    "lit": "^2.0.0-rc.2",
    "lit-element": "^4.0.2",
    "rollup": "^1.32.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.3.1",
    "rollup-plugin-typescript2": "^0.24.3",
    "rollup-plugin-uglify": "^6.0.3",
    "typescript": "^3.6.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "eslint-plugin-lit": "^1.10.1"
  },
  "customElements": "custom-elements.json"
}
